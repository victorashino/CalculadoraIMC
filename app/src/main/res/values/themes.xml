<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IMC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_300</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_700</item>
        <item name="colorSecondaryVariant">@color/green_900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/green_100</item>
    </style>

    <style name="Title1" parent="Widget.AppCompat.TextView" >
        <item name="android:textSize">38dp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/green_700</item>
    </style>

    <style name="Title3" parent="Widget.AppCompat.TextView" >
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/green_900</item>
    </style>

    <style name="Body1" parent="Widget.AppCompat.EditText" >
        <item name="android:textSize">19dp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/green_300</item>
    </style>

    <style name="Button1" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/green_700</item>
    </style>

    <style name="Arrow" parent="Widget.Design.FloatingActionButton" >
        <item name="android:tint">@color/green_900</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="elevation">0dp</item>
    </style>
</resources>